<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#3B3B3B">
    <ImageView
        android:id="@+id/my_frag_lay_touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/my_frag_lay_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdsadsf"
        android:layout_toRightOf="@id/my_frag_lay_touxiang"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/my_frag_lay_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_next_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/my_frag_lay_loghou"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/my_frag_lay_dongtai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="动态"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ffffff"></View>
        <TextView
            android:id="@+id/my_frag_lay_guanzhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="关注"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ffffff"></View>
        <TextView
            android:id="@+id/my_frag_lay_fensi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="粉丝"
            android:textSize="20sp"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ffffff"></View>

        <TextView
            android:id="@+id/my_frag_lay_fangke"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="访客"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_frag_lay_logq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <ImageButton
            android:id="@+id/my_frag_lay_qqlog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/qq_sdk_login"
            />

        <ImageButton
            android:id="@+id/my_frag_lay_shoujilog"
            android:layout_marginLeft="40dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/shouji_sdk_login"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/my_frag_lay_gengduolog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多方式登录"
        android:textSize="20sp"
        android:textColor="#ffffff"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_next_pic"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/my_frag_lay_shoucang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="收藏"
            android:drawableTop="@mipmap/my_frag_shouchang"
            android:gravity="center"/>
        <TextView
            android:id="@+id/my_frag_lay_lishi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="历史"
            android:drawableTop="@mipmap/my_frag_lishi"
            android:gravity="center"/>
        <TextView
            android:id="@+id/my_frag_lay_yejian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="夜间"
            android:textSize="25sp"
            android:button="@null"
            android:drawableTop="@mipmap/my_frag_yejian"
            android:gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_frag_lay_xiaoxitongzhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:textSize="25sp"
           android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:layout_marginTop="20sp"></View>

    <RelativeLayout
        android:id="@+id/my_frag_lay_shangcheng"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头条商城"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>

    <RelativeLayout
        android:id="@+id/my_frag_lay_tegong"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东特供"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"
        android:layout_marginTop="20sp"></View>

    <RelativeLayout
        android:id="@+id/my_frag_lay_boliao"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要爆料"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>

    <RelativeLayout
        android:id="@+id/my_frag_lay_fankui"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>

    <RelativeLayout
        android:id="@+id/my_frag_lay_xitong"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_next_pic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</LinearLayout>