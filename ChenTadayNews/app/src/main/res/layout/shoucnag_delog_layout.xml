<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:background="@mipmap/app_ic"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="亲~~~喜欢就收藏了哦,分享给朋友也行哦"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
    <ImageButton
        android:id="@+id/delog_shoucang_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/delog_shoucan"
        android:layout_marginRight="150dp"
        />

    <ImageButton
        android:id="@+id/delog_fenxiang_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:background="@mipmap/delog_fenxiang"

        />
</LinearLayout>
</LinearLayout>